<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectionActivity">

    <TextView
        android:id="@+id/app_name_design"
        android:layout_width="205dp"
        android:layout_height="104dp"
        android:layout_marginTop="196dp"
        android:fontFamily="@font/montserrat_alternates"
        android:gravity="center"
        android:text="@string/app_name_design"
        android:textColor="#000000"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/go_home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/connection_page_go_home"
        android:textSize="20dp"
        android:onClick="onGoHomeClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name_design" />

    <TextView
        android:id="@+id/attention_text"
        android:layout_width="104dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:text=""
        android:gravity="center"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/go_home_button" />


</androidx.constraintlayout.widget.ConstraintLayout>