<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dji.importSDKDemo.MainActivity"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/app_name_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="@string/app_name_design"
        android:textColor="#000000"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/go_fly_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name_design"
        app:srcCompat="@drawable/ic_go_fly"
        android:onClick="OnButtonCategoryClick"/>

    <ImageView
        android:id="@+id/zones_map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name_design"
        app:srcCompat="@drawable/ic_zones_map"
        android:onClick="OnButtonCategoryClick"/>

    <ImageView
        android:id="@+id/about_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="264dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name_design"
        android:contentDescription="@string/about_app_desc"
        app:srcCompat="@drawable/ic_about_app"
        android:onClick="OnButtonCategoryClick"/>


</androidx.constraintlayout.widget.ConstraintLayout>
