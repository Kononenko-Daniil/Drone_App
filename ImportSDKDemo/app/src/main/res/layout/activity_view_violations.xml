<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ViewViolationsActivity">


    <ImageView
        android:id="@+id/go_back_button2"
        android:layout_width="32dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/go_back_button_desc"
        android:onClick="onBackClick"
        app:layout_constraintEnd_toStartOf="@+id/view_violations_page_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_go_back_button" />

    <TextView
        android:id="@+id/view_violations_page_name"
        android:layout_width="274dp"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/montserrat_alternates"
        android:gravity="center"
        android:text="@string/view_violations_page_name"
        android:textColor="#000000"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="360dp"
        android:layout_height="495dp"
        android:layout_marginTop="180dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/violations"
            android:layout_width="360dp"
            android:layout_height="445dp"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.917" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>